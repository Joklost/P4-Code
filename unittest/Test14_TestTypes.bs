#Include("stdlib.bsi")

Begin Declarations
  Declare terrain as Terrain
  terrain.Width = 1800
  terrain.Height = 900

  Declare bar1vertex1 as Coord
  //bar1vertex1.X = 30
  //bar1vertex1.Y = 50
  bar1vertex1 = (30, 50)
  Declare bar1vertex2 as Coord
  bar1vertex2.X = 50
  bar1vertex2.Y = 30
  Declare bar1 as Barrier
  bar1.AddVertex(bar1vertex1)
  bar1.AddVertex(bar1vertex2)

  Declare aSol1 as Soldier
  Declare aSol1Pos as Coord
  aSol1Pos.X = 400
  aSol1Pos.Y = 600
  aSol1.Pos = aSol1Pos
  Declare allies as Force
  allies.AddSoldier(aSol1)

  Declare eSol1 as Soldier
  Declare enemies as Force
  enemies.AddSoldier(eSol1)

End Declarations

Declare Simulations
  Simulation ProtectTheGeneral aSol1
    Step 1
      //MoveSXY(aSol1, 300, 250)
      aSol1.MoveToXY(300, 250)
    Interrupts

  End Simulation

  Simulation Defend eSol1
    Step 1
      eSol1.MoveToXY(400, 600)
    Interrupts
  End Simulation
End Declare Simulations

Begin Program
  RunSimulation(allies, enemies, terrain, "ProtectTheGeneral", "Defend")
End Program
